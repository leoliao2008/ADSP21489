<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_marginLeft="@dimen/margin_console_item_horizontal"
        android:layout_marginRight="@dimen/margin_console_item_horizontal"
        android:layout_marginTop="@dimen/margin_console_item_vertical"
        android:layout_marginBottom="@dimen/margin_console_item_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/cardview_default_radius">


        <TextView
            android:id="@+id/console_item_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is a Test"
            android:textColor="@color/colorBlack"
            android:gravity="center"
            android:padding="@dimen/margin_small"
           />


    </android.support.v7.widget.CardView>



</FrameLayout>