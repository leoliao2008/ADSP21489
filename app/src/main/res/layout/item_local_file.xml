<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="@dimen/padding_button_text_large">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/sd_file_item_iv_dir"
            android:layout_width="@dimen/sd_file_item_width"
            android:layout_height="@dimen/sd_file_item_height"
            android:src="@drawable/directory_icon"/>

        <ImageView
            android:id="@+id/sd_file_item_iv_doc"
            android:layout_width="@dimen/sd_file_item_width"
            android:layout_height="@dimen/sd_file_item_height"
            android:src="@drawable/document_icon"/>

    </FrameLayout>

    <TextView
        android:id="@+id/sd_file_item_tv_file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="10"
        android:maxLength="81"
        android:textSize="@dimen/sp_15"
        android:text="temp"/>

</LinearLayout>