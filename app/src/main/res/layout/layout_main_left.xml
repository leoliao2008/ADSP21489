<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackGround">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试发送命令"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:textSize="@dimen/sp_18"
        android:padding="@dimen/padding_button_text_large"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_test_connection"
                style="@style/MyButtonStyle1"
                android:text="测试连接"/>

            <Button
                android:id="@+id/btn_hibernate"
                style="@style/MyButtonStyle1"
                android:text="开启休眠"/>

            <Button
                android:id="@+id/btn_start_adsp"
                style="@style/MyButtonStyle1"
                android:text="开启接收机"/>

            <Button
                android:id="@+id/btn_start_service"
                style="@style/MyButtonStyle1"
                android:text="执行所有业务或特定业务"/>

            <Button
                android:id="@+id/btn_check_task_list"
                style="@style/MyButtonStyle1"
                android:text="查询当前运行业务类型"/>

            <Button
                android:id="@+id/btn_stop_adsp"
                style="@style/MyButtonStyle1"
                android:text="关闭接收机"/>

            <Button
                android:id="@+id/btn_check_if_activated"
                style="@style/MyButtonStyle1"
                android:text="查询当前接收机是否已经启动"/>

            <Button
                android:id="@+id/btn_check_software_version"
                style="@style/MyButtonStyle1"
                android:text="查询软件版本"/>

            <Button
                android:id="@+id/btn_set_device_id"
                style="@style/MyButtonStyle1"
                android:text="设置产品ID"/>

            <Button
                android:id="@+id/btn_check_adsp_id"
                style="@style/MyButtonStyle1"
                android:text="查询产品ID"/>

            <Button
                android:id="@+id/btn_get_snr_rate"
                style="@style/MyButtonStyle1"
                android:text="查询信噪比"/>

            <Button
                android:id="@+id/btn_check_snr_status"
                style="@style/MyButtonStyle1"
                android:text="查询接收状态"/>

            <Button
                android:id="@+id/btn_get_time_offset"
                style="@style/MyButtonStyle1"
                android:text="查询时偏"/>

            <Button
                android:id="@+id/btn_get_freq_offset"
                style="@style/MyButtonStyle1"
                android:text="查询频偏"/>

            <Button
                android:id="@+id/btn_check_tuner_status"
                style="@style/MyButtonStyle1"
                android:text="查询tuner状态"/>


            <Button
                android:id="@+id/btn_check_system_date"
                style="@style/MyButtonStyle1"
                android:text="查询日期时间"/>

            <Button
                android:id="@+id/btn_enable_ckfo"
                style="@style/MyButtonStyle1"
                android:text="设置校验失败可以输出"/>

            <Button
                android:id="@+id/btn_disable_ckfo"
                style="@style/MyButtonStyle1"
                android:text="设置校验失败不可以输出"/>

            <Button
                android:id="@+id/btn_check_ckfo_config"
                style="@style/MyButtonStyle1"
                android:text="查询设置校验失败是否输出"/>

            <Button
                android:id="@+id/btn_set_baud_rate"
                style="@style/MyButtonStyle1"
                android:text="设置波特率"/>

            <Button
                android:id="@+id/btn_set_freq"
                style="@style/MyButtonStyle1"
                android:text="设置频点"/>

            <Button
                android:id="@+id/btn_check_freq"
                style="@style/MyButtonStyle1"
                android:text="查询当前频点"/>

            <Button
                android:id="@+id/btn_set_tunes"
                style="@style/MyButtonStyle1"
                android:text="设置左频及右频"/>

            <Button
                android:id="@+id/btn_check_tunes"
                style="@style/MyButtonStyle1"
                android:text="查询当前左频及右频"/>

            <Button
                android:id="@+id/btn_enable_1pps"
                style="@style/MyButtonStyle1"
                android:text="设置1PPS开"/>

            <Button
                android:id="@+id/btn_disable_1pps"
                style="@style/MyButtonStyle1"
                android:text="设置1PPS关"/>

            <Button
                android:id="@+id/btn_check_1pps_config"
                style="@style/MyButtonStyle1"
                android:text="查询1PPS设置状态"/>

            <Button
                android:id="@+id/btn_check_reset_count"
                style="@style/MyButtonStyle1"
                android:text="查询重启次数"/>
            <Button
                android:id="@+id/btn_set_reset_count"
                style="@style/MyButtonStyle1"
                android:text="设置重启次数"/>
            <Button
                android:id="@+id/btn_check_LCPD"
                style="@style/MyButtonStyle1"
                android:text="启动译码统计"/>
            <Button
                android:id="@+id/btn_stop_LCPD"
                style="@style/MyButtonStyle1"
                android:text="停止译码统计"/>
            <Button
                android:id="@+id/btn_prepare_upgrade"
                style="@style/MyButtonStyle1"
                android:text="启动升级"/>


        </LinearLayout>

    </ScrollView>

</LinearLayout>
